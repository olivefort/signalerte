{% extends 'base.html.twig' %}

{% block title %}Signalert - Connexion{% endblock %}

{% block body %}
<div class="gridsignalement m2">
    <h1 class="col12 m4">Connexion</h1>

    {% if error %}
        <div class="col12 alert alert-warning">
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success mt-4">
        <strong>{{ message }}</strong>
        </div>
    {% endfor %}

    <form class="log" action="{{ path('security.login') }}" method="post">
        <div class="m-2">
            <label for="username" class="form-label mt-4">Email</label>
            <input type="email" class="form-control" id="username" name="_username" placeholder="Enter email" value="{{ last_username }}">
        </div>
        <div class="m-2">
            <label for="password" class="form-label mt-4">Password</label>
            <input type="password" class="form-control" id="password" placeholder="***********" name="_password">
        </div>
        <button type="submit" class="m-2 btn btn-primary">Se connecter</button>
    </form>
</div>
{% endblock %}
