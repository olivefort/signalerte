{% extends 'base.html.twig' %}

{% block title %}Infections{% endblock %}

{% block body %}
    <div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success mt-4">            
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
        <h1>Infections</h1>

        <a href="{{ path('infection.new')}}" class="btn btn-primary">Ajouter une infection</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="entetesign" scope="col">Infection</th>
                    <th class="entetesign" scope="col">Modifier</th>
                    <th class="entetesign" scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for infection in infections %}
                    <tr class="table-success">                        
                        <td>{{infection.infection}}</td>                        
                        <td><a class="btn btn-info" type="button" href='{{ path('infection.edit', {id: infection.id})}}'>Modifier</a></td>
                        <td><a class="btn btn-secondary" type="button" href='{{ path('infection.delete', {id: infection.id})}}'>Effacer</a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(infections)}}
        </div>
    </div>
{% endblock %}
