{% extends 'base.html.twig' %}

{% block title %}Etiologie{% endblock %}

{% block body %}
    <div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success mt-4">            
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
        <h1>Les agents Ã©tiologique</h1>

        <a href="{{ path('etiologie.new')}}" class="btn btn-primary">Ajouter une etiologie</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="entetesign" scope="col">Etiologie</th>
                    <th class="entetesign" scope="col">Modifier</th>
                    <th class="entetesign" scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for etiologie in etiologies %}
                    <tr class="table-success">                        
                        <td>{{etiologie.agent}}</td>                        
                        <td><a class="btn btn-info" type="button" href='{{ path('etiologie.edit', {id: etiologie.id})}}'>Modifier</a></td>
                        <td><a class="btn btn-secondary" type="button" href='{{ path('etiologie.delete', {id: etiologie.id})}}'>Effacer</a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(etiologies)}}
        </div>
    </div>
{% endblock %}
