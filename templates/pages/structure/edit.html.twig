        <div class="form-group">
            {{ form_label(form.type) }}      
            {{ form_widget(form.type) }}
            <div class="form-error">{{ form_errors(form.type) }}</div>           
        </div>

        <div class="form-group">
            {{ form_row(form.submit, { 'label': 'Modifier la structure'}) }}      
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
