{% extends 'base.html.twig' %}

{% block title %}Resistances{% endblock %}

{% block body %}
    <div class="container mt-4">

    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success mt-4">            
        <strong>{{ message }}</strong>
        </div>
    {% endfor %}
    
        <h1>Resistances</h1>

        <a href="{{ path('resistance.new')}}" class="btn btn-primary">Ajouter une resistance</a>        

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="entetesign" scope="col">Resistance</th>
                    <th class="entetesign" scope="col">Modifier</th>
                    <th class="entetesign" scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for resistance in resistances %}
                    <tr class="table-success">                        
                        <td>{{resistance.type}}</td>                        
                        <td><a class="btn btn-info" type="button" href='{{ path('resistance.edit', {id: resistance.id})}}'>Modifier</a></td>
                        <td><a class="btn btn-secondary" type="button" href='{{ path('resistance.delete', {id: resistance.id})}}'>Effacer</a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(resistances)}}
        </div>
    </div>
{% endblock %}
