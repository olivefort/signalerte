{% extends 'base.html.twig' %}

{% block title %}Agent Infectieux{% endblock %}

{% block body %}
    <div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success mt-4">            
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
        <h1>Les agents infectieux</h1>

        {# <a href="{{ path('agent.new')}}" class="btn btn-primary mb-2">Cr√©er un agent infectieux</a> #}

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="entetesign" scope="col">Agent Infectieux</th>
                    <th class="entetesign" scope="col">Signalement</th>
                </tr>
            </thead>
            <tbody>
                {% for agent in agents %}
                    <tr class="table-success">                        
                        <td>{{agent.organisme}}
                            <ul>    
                            {% for resistance in agent.resistance %}
                                <li class="resistance">{{resistance.type}}</li>
                            {% endfor %}
                            </ul>
                        </td>
                        <td><a class="btn btn-secondary" type="button" href='{{ path('signalement.show', {id: agent.id})}}'>Voir</a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(agents)}}
        </div>
    </div>
{% endblock %}
